[user]
	name = Erwan Fouret
	email = efouret@voyages-sncf.com
[core]
	autocrlf = true
	editor = vim

[difftool "sourcetree"]
	cmd = 'G:/Program Files/KDiff3/kdiff3.exe' \"$LOCAL\" \"$REMOTE\"

[mergetool "sourcetree"]
	cmd = 'G:/Program Files/KDiff3/kdiff3.exe' \"$BASE\" \"$LOCAL\" \"$REMOTE\" -o \"$MERGED\"
	trustExitCode = true

[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[alias]
	co = checkout
	undo = reset --hard
	cb = checkout -b
	br = branch
	cp = cherry-pick
	tree = log --graph --oneline --all --decorate    
	ri = rebase -i
	rim = rebase -i master
	re = rebase
	ru = rebase upstream/master
	fu = fetch upstream
[branch]
	autosetuprebase = always
[push]
	default = simple
